<UserControl x:Class="Shamsheer.Messenger.Desktop.Components.MenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shamsheer.Messenger.Desktop"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d">
    
    <Button Background="Transparent" MouseEnter="Button_MouseEnter" MouseLeave="Button_MouseLeave" Cursor="Arrow" BorderThickness="0" Padding="0" Height="45" HorizontalContentAlignment="Left">
        <Button.Content>
            <StackPanel Orientation="Horizontal">
                <md:PackIcon x:Name="iconMenu" Kind="Users" Foreground="#6C7883" Width="25" Height="25" Margin="20 0 0 0"/>
                <TextBlock x:Name="textMenu" Text="New Group" VerticalAlignment="Center" Margin="20 0 0 0"/>
            </StackPanel>
        </Button.Content>
    </Button>
</UserControl>
